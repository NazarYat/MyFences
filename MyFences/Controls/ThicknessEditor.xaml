<UserControl x:Class="MyFences.Controls.ThicknessEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyFences.Controls"
             mc:Ignorable="d" >
    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="5">
        <local:NumericUpToDown Minimum="0" Maximum="1000"
                               Value="{Binding Left, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                               TextBoxStyle="{Binding TextBoxStyle, RelativeSource={RelativeSource AncestorType=UserControl}}"
                               ToolTip="Left"
                               Width="50"
                               Margin="2, 0"/>
        
        <local:NumericUpToDown Minimum="0" Maximum="1000"
                               Value="{Binding Top, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                               TextBoxStyle="{Binding TextBoxStyle, RelativeSource={RelativeSource AncestorType=UserControl}}"
                               ToolTip="Top"
                               Width="50"
                               Margin="2, 0"/>

        <local:NumericUpToDown Minimum="0" Maximum="1000"
                               Value="{Binding Right, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                               TextBoxStyle="{Binding TextBoxStyle, RelativeSource={RelativeSource AncestorType=UserControl}}"
                               ToolTip="Right"
                               Width="50"
                               Margin="2, 0"/>

        <local:NumericUpToDown Minimum="0" Maximum="1000"
                               Value="{Binding Bottom, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                               TextBoxStyle="{Binding TextBoxStyle, RelativeSource={RelativeSource AncestorType=UserControl}}"
                               ToolTip="Bottom"
                               Width="50"
                               Margin="2, 0"/>
    </StackPanel>
</UserControl>
