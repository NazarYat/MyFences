<Window x:Class="MyFences.Windows.SetupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyFences.Windows"
        xmlns:vm="clr-namespace:MyFences.ViewModels"
        xmlns:controls="clr-namespace:MyFences.Controls"
        mc:Ignorable="d"
        Title="Setup" Height="450" Width="800" Icon="/icon.ico"
        d:DataContext="{d:DesignInstance Type=vm:SetupViewModel}">
    <Window.Resources>
        <ResourceDictionary>
            <Style x:Key="DefaultLabel" TargetType="Label">
                <Setter Property="Margin" Value="5"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
            </Style>
            <Style x:Key="TextBoxStyle" TargetType="TextBox">
                <Setter Property="SnapsToDevicePixels" Value="True"/>
                <Setter Property="OverridesDefaultStyle" Value="True"/>
                <Setter Property="BorderBrush" Value="Gray"/>
                <Setter Property="Background" Value="White"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Padding" Value="5"/>
                <Setter Property="Margin" Value="0, 5"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="TextBox">
                            <Border x:Name="border"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="10"
                                    SnapsToDevicePixels="True">
                                <ScrollViewer x:Name="PART_ContentHost" Margin="0" />
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter TargetName="border" Property="Background" Value="#FFF0F0F0"/>
                                    <Setter TargetName="border" Property="BorderBrush" Value="#FFD9D9D9"/>
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="BorderBrush" Value="#FF7EB4EA"/>
                                </Trigger>
                                <Trigger Property="IsKeyboardFocused" Value="True">
                                    <Setter TargetName="border" Property="BorderBrush" Value="#FF569DE5"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            <Style x:Key="FancyRoundedCheckBox" TargetType="CheckBox">
                <Setter Property="Foreground" Value="Black"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="CheckBox">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <!-- Custom Toggle -->
                                <Grid Width="40" Height="20" Margin="0,0,8,0">
                                    <Border x:Name="SwitchBorder"
                                    Background="#ccc"
                                    CornerRadius="10"
                                    BorderBrush="Gray"
                                    BorderThickness="1" />

                                    <Ellipse x:Name="SwitchKnob"
                                     Fill="White"
                                     Width="18" Height="18"
                                     HorizontalAlignment="Left"
                                     Margin="1"
                                     RenderTransformOrigin="0.5,0.5">
                                        <Ellipse.RenderTransform>
                                            <TranslateTransform X="0" />
                                        </Ellipse.RenderTransform>
                                    </Ellipse>
                                </Grid>

                                <!-- Label -->
                                <ContentPresenter VerticalAlignment="Center"
                                          RecognizesAccessKey="True" />
                            </StackPanel>

                            <!-- Triggers for Interaction -->
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter TargetName="SwitchBorder" Property="Background" Value="#4CAF50"/>
                                    <Setter TargetName="SwitchKnob" Property="RenderTransform">
                                        <Setter.Value>
                                            <TranslateTransform X="20"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>

                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="SwitchBorder" Property="BorderBrush" Value="#888" />
                                </Trigger>

                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter TargetName="SwitchBorder" Property="Opacity" Value="0.4"/>
                                    <Setter TargetName="SwitchKnob" Property="Opacity" Value="0.4"/>
                                    <Setter Property="Foreground" Value="Gray"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <TabControl>
            <TabItem Header="Common" IsSelected="False">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Label Grid.Column="0" Grid.Row="0" Content="Grid margins" Style="{StaticResource DefaultLabel}" />
                    <controls:ThicknessEditor Grid.Column="1" Grid.Row="0" 
                                              Value="{Binding GridMargin, UpdateSourceTrigger=PropertyChanged, Delay=300}" 
                                              TextBoxStyle="{StaticResource TextBoxStyle}" />

                    <StackPanel Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2"
                                Orientation="Horizontal">
                        <Label Content="Columns: " Style="{StaticResource DefaultLabel}" />
                        <controls:NumericUpToDown Minimum="0" Maximum="700" 
                                                  Width="50"
                                                  Value="{Binding GridColumns, UpdateSourceTrigger=PropertyChanged, Delay=300}" 
                                                  TextBoxStyle="{StaticResource TextBoxStyle}"/>
                        
                        <Label Content="Rows: " Style="{StaticResource DefaultLabel}" />
                        <controls:NumericUpToDown Minimum="0" Maximum="700" 
                                                  Width="50"
                                                  Value="{Binding GridRows, UpdateSourceTrigger=PropertyChanged, Delay=300}" 
                                                  TextBoxStyle="{StaticResource TextBoxStyle}"/>
                    </StackPanel>

                    <Label Grid.Column="0" Grid.Row="2" Content="Use grid" Style="{StaticResource DefaultLabel}" />
                    <CheckBox Grid.Column="1" Grid.Row="2" IsChecked="{Binding UseGrid, UpdateSourceTrigger=PropertyChanged, Delay=300}" 
                              Style="{StaticResource FancyRoundedCheckBox}" />

                </Grid>
            </TabItem>
            <TabItem Header="Current" IsSelected="True">
                <ScrollViewer>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Label Grid.Column="0" Grid.Row="0" Content="Name" Style="{StaticResource DefaultLabel}" />
                        <TextBox Grid.Column="1" Grid.Row="0" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged, Delay=300}" Style="{StaticResource TextBoxStyle}" />

                        <Label Grid.Column="0" Grid.Row="1" Content="Use blur" Style="{StaticResource DefaultLabel}" />
                        <CheckBox Grid.Column="1" Grid.Row="1" IsChecked="{Binding UseBlur, UpdateSourceTrigger=PropertyChanged, Delay=300}" 
                                Style="{StaticResource FancyRoundedCheckBox}" />

                        <Label Grid.Column="0" Grid.Row="2" Content="Border thickness" Style="{StaticResource DefaultLabel}" />
                        <controls:NumericUpToDown Grid.Column="1" Grid.Row="2" Minimum="0" Maximum="50" 
                                              Value="{Binding BorderThickness, UpdateSourceTrigger=PropertyChanged, Delay=300}" 
                                              TextBoxStyle="{StaticResource TextBoxStyle}"/>

                        <Label Grid.Column="0" Grid.Row="3" 
                           Content="Background color" Style="{StaticResource DefaultLabel}" />
                        <controls:ColorPickerControl Grid.Column="1" Grid.Row="3" HorizontalAlignment="Left" SelectedColor="{Binding BackgroundColor, UpdateSourceTrigger=PropertyChanged, Delay=300}" />

                        <Label Grid.Column="0" Grid.Row="4" 
                           Content="Window border color" Style="{StaticResource DefaultLabel}" />
                        <controls:ColorPickerControl Grid.Column="1" Grid.Row="4" HorizontalAlignment="Left" SelectedColor="{Binding WindowBorderColor, UpdateSourceTrigger=PropertyChanged, Delay=300}" />

                        <Label Grid.Column="0" Grid.Row="5" 
                           Content="Header color" Style="{StaticResource DefaultLabel}" />
                        <controls:ColorPickerControl Grid.Column="1" Grid.Row="5" HorizontalAlignment="Left" SelectedColor="{Binding HeaderColor, UpdateSourceTrigger=PropertyChanged, Delay=300}" />

                        <Label Grid.Column="0" Grid.Row="6" Content="Header height" Style="{StaticResource DefaultLabel}" />
                        <controls:NumericUpToDown Grid.Column="1" Grid.Row="6" Minimum="0" Maximum="100" 
                                              Value="{Binding HeaderHeight, UpdateSourceTrigger=PropertyChanged, Delay=300}" 
                                              TextBoxStyle="{StaticResource TextBoxStyle}"/>

                        <Label Grid.Column="0" Grid.Row="7" Content="Items spacing" Style="{StaticResource DefaultLabel}" />
                        <controls:NumericUpToDown Grid.Column="1" Grid.Row="7" Minimum="0" Maximum="100" 
                                              Value="{Binding Spacing, UpdateSourceTrigger=PropertyChanged, Delay=300}" 
                                              TextBoxStyle="{StaticResource TextBoxStyle}"/>

                        <Label Grid.Column="0" Grid.Row="8" Content="Item height" Style="{StaticResource DefaultLabel}" />
                        <controls:NumericUpToDown Grid.Column="1" Grid.Row="8" Minimum="0" Maximum="200" 
                                              Value="{Binding ItemHeight, UpdateSourceTrigger=PropertyChanged, Delay=300}" 
                                              TextBoxStyle="{StaticResource TextBoxStyle}"/>

                        <Label Grid.Column="0" Grid.Row="9" Content="Item width" Style="{StaticResource DefaultLabel}" />
                        <controls:NumericUpToDown Grid.Column="1" Grid.Row="9" Minimum="0" Maximum="200" 
                                              Value="{Binding ItemWidth, UpdateSourceTrigger=PropertyChanged, Delay=300}" 
                                              TextBoxStyle="{StaticResource TextBoxStyle}"/>

                        <Label Grid.Column="0" Grid.Row="10" Content="Item icon size" Style="{StaticResource DefaultLabel}" />
                        <controls:NumericUpToDown Grid.Column="1" Grid.Row="10" Minimum="0" Maximum="200" 
                                              Value="{Binding ItemIconSize, UpdateSourceTrigger=PropertyChanged, Delay=300}" 
                                              TextBoxStyle="{StaticResource TextBoxStyle}"/>

                        <Label Grid.Column="0" Grid.Row="11" Content="Item color" Style="{StaticResource DefaultLabel}" />
                        <controls:ColorPickerControl Grid.Column="1" Grid.Row="11" HorizontalAlignment="Left" SelectedColor="{Binding ItemColor, UpdateSourceTrigger=PropertyChanged, Delay=300}" />

                        <Label Grid.Column="0" Grid.Row="12" Content="Item border color" Style="{StaticResource DefaultLabel}" />
                        <controls:ColorPickerControl Grid.Column="1" Grid.Row="12" HorizontalAlignment="Left" SelectedColor="{Binding ItemBorderColor, UpdateSourceTrigger=PropertyChanged, Delay=300}" />

                        <Label Grid.Column="0" Grid.Row="13" Content="Item border thickness" Style="{StaticResource DefaultLabel}" />
                        <controls:NumericUpToDown Grid.Column="1" Grid.Row="13" Minimum="0" Maximum="200" 
                                                  Value="{Binding ItemBorderThickness, UpdateSourceTrigger=PropertyChanged, Delay=300}" 
                                                  TextBoxStyle="{StaticResource TextBoxStyle}"/>

                        <Label Grid.Column="0" Grid.Row="14" Content="Highlighted item color" Style="{StaticResource DefaultLabel}" />
                        <controls:ColorPickerControl Grid.Column="1" Grid.Row="14" HorizontalAlignment="Left" SelectedColor="{Binding HighlightedItemColor, UpdateSourceTrigger=PropertyChanged, Delay=300}" />

                        <Label Grid.Column="0" Grid.Row="15" Content="Highlighted item border color" Style="{StaticResource DefaultLabel}" />
                        <controls:ColorPickerControl Grid.Column="1" Grid.Row="15" HorizontalAlignment="Left" SelectedColor="{Binding HighlightedItemBorderColor, UpdateSourceTrigger=PropertyChanged, Delay=300}" />

                        <Label Grid.Column="0" Grid.Row="16" Content="Highlighted item border thickness" Style="{StaticResource DefaultLabel}" />
                        <controls:NumericUpToDown Grid.Column="1" Grid.Row="16" Minimum="0" Maximum="200" 
                                                  Value="{Binding HighlightedItemBorderThickness, UpdateSourceTrigger=PropertyChanged, Delay=300}" 
                                                  TextBoxStyle="{StaticResource TextBoxStyle}"/>

                        <Label Grid.Column="0" Grid.Row="17" Content="Selected item color" Style="{StaticResource DefaultLabel}" />
                        <controls:ColorPickerControl Grid.Column="1" Grid.Row="17" HorizontalAlignment="Left" SelectedColor="{Binding SelectedItemColor, UpdateSourceTrigger=PropertyChanged, Delay=300}" />

                        <Label Grid.Column="0" Grid.Row="18" Content="Selected item border color" Style="{StaticResource DefaultLabel}" />
                        <controls:ColorPickerControl Grid.Column="1" Grid.Row="18" HorizontalAlignment="Left" SelectedColor="{Binding SelectedItemBorderColor, UpdateSourceTrigger=PropertyChanged, Delay=300}" />

                        <Label Grid.Column="0" Grid.Row="19" Content="Selected item border thickness" Style="{StaticResource DefaultLabel}" />
                        <controls:NumericUpToDown Grid.Column="1" Grid.Row="19" Minimum="0" Maximum="200" 
                                                  Value="{Binding SelectedItemBorderThickness, UpdateSourceTrigger=PropertyChanged, Delay=300}" 
                                                  TextBoxStyle="{StaticResource TextBoxStyle}"/>

                        <Label Grid.Column="0" Grid.Row="20" Content="Item text color" Style="{StaticResource DefaultLabel}" />
                        <controls:ColorPickerControl Grid.Column="1" Grid.Row="20" HorizontalAlignment="Left" SelectedColor="{Binding ItemTextColor, UpdateSourceTrigger=PropertyChanged, Delay=300}" />

                        <Label Grid.Column="0" Grid.Row="21" Content="Header text color" Style="{StaticResource DefaultLabel}" />
                        <controls:ColorPickerControl Grid.Column="1" Grid.Row="21" HorizontalAlignment="Left" SelectedColor="{Binding HeaderTextColor, UpdateSourceTrigger=PropertyChanged, Delay=300}" />

                        <Label Grid.Column="0" Grid.Row="22" Content="Header font size" Style="{StaticResource DefaultLabel}" />
                        <controls:NumericUpToDown Grid.Column="1" Grid.Row="22" Minimum="0" Maximum="200" 
                                                  Value="{Binding HeaderFontSize, UpdateSourceTrigger=PropertyChanged, Delay=300}" 
                                                  TextBoxStyle="{StaticResource TextBoxStyle}"/>

                        <Label Grid.Column="0" Grid.Row="23" Content="Item font size" Style="{StaticResource DefaultLabel}" />
                        <controls:NumericUpToDown Grid.Column="1" Grid.Row="23" Minimum="0" Maximum="200" 
                                                  Value="{Binding ItemFontSize, UpdateSourceTrigger=PropertyChanged, Delay=300}" 
                                                  TextBoxStyle="{StaticResource TextBoxStyle}"/>

                        <Label Grid.Column="0" Grid.Row="24" Content="Scroll bar color" Style="{StaticResource DefaultLabel}" />
                        <controls:ColorPickerControl Grid.Column="1" Grid.Row="24" HorizontalAlignment="Left" SelectedColor="{Binding ScrollBarColor, UpdateSourceTrigger=PropertyChanged, Delay=300}" />

                        <Label Grid.Column="0" Grid.Row="25" Content="Scroll bar border color" Style="{StaticResource DefaultLabel}" />
                        <controls:ColorPickerControl Grid.Column="1" Grid.Row="25" HorizontalAlignment="Left" SelectedColor="{Binding ScrollBarBorderColor, UpdateSourceTrigger=PropertyChanged, Delay=300}" />

                        <Label Grid.Column="0" Grid.Row="26" Content="Scroll bar border thickness" Style="{StaticResource DefaultLabel}" />
                        <controls:NumericUpToDown Grid.Column="1" Grid.Row="26" Minimum="0" Maximum="200" 
                                                  Value="{Binding ScrollBarBorderThickness, UpdateSourceTrigger=PropertyChanged, Delay=300}" 
                                                  TextBoxStyle="{StaticResource TextBoxStyle}"/>

                        <Label Grid.Column="0" Grid.Row="27" Content="Scroll bar corner radius" Style="{StaticResource DefaultLabel}" />
                        <controls:NumericUpToDown Grid.Column="1" Grid.Row="27" Minimum="0" Maximum="200" 
                                                  Value="{Binding ScrollBarCornerRadius, UpdateSourceTrigger=PropertyChanged, Delay=300}" 
                                                  TextBoxStyle="{StaticResource TextBoxStyle}"/>

                        <Label Grid.Column="0" Grid.Row="28" Content="Scroll bar width" Style="{StaticResource DefaultLabel}" />
                        <controls:NumericUpToDown Grid.Column="1" Grid.Row="28" Minimum="0" Maximum="200" 
                                                  Value="{Binding ScrollBarWidth, UpdateSourceTrigger=PropertyChanged, Delay=300}" 
                                                  TextBoxStyle="{StaticResource TextBoxStyle}"/>

                    </Grid>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
