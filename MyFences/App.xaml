<Application x:Class="MyFences.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:converters="clr-namespace:MyFences.Converters"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MyFences">
    <Application.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <converters:BooleanToVisibilityConverterInverted x:Key="BooleanToVisibilityConverterInverted" />
        <converters:ColorToBrushConverter x:Key="ColorToBrushConverter" />
        <ResourceDictionary x:Key="buttonResources">
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/ButtonResources.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
